<%- include('partials/head') %>
</head>
<body>
  <%- include('partials/nav') %>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-8">
      Here are our registered homes:
    </h2>

    <ul class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2">
      <% registeredHomes.forEach(home => { %>
        <li class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition duration-300">
          <!-- Image -->
          <div class="overflow-hidden h-64 sm:h-56 md:h-64 lg:h-72">
            <img src="/house.jpg" 
                 alt="House Image" 
                 class="w-full h-full object-cover transform hover:scale-105 transition duration-500" />
          </div>

          <!-- Content -->
          <div class="p-6 flex flex-col justify-between h-full">
            <div>
              <h2 class="text-2xl font-semibold text-gray-900 mb-2">
                <%= home.houseName %>
              </h2>
              <p class="text-sm text-gray-600 mb-1">
                <i class="fas fa-map-marker-alt mr-1"></i><%= home.location %>
              </p>
              <p class="text-sm text-gray-800">
                💰 <strong>Price:</strong> ₹<%= home.price %>
              </p>
            </div>
            <div class="mt-4">
              <span class="inline-block bg-yellow-400 text-white px-3 py-1 text-sm font-medium rounded-full">
                ⭐ <%= home.rating %>/5
              </span>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>
