<%- include('../partials/head') %>
</head>

<body class="bg-gray-900 text-gray-100">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-8 p-8 bg-gray-800 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-100">
      <%= editing ? "Edit" : "Register" %> Your Home on AirBnB
    </h1>

    <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" enctype="multipart/form-data" class="max-w-md mx-auto">
      <input type="hidden" name="id" value="<%= editing ? home._id : '' %>" />

      <label for="houseName" class="block text-gray-400 text-sm font-bold mb-2">House Name</label>
      <input
        type="text"
        id="houseName"
        name="houseName"
        value="<%= editing ? home.houseName : '' %>"
        placeholder="e.g., The Cozy Cottage"
        class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <label for="price" class="block text-gray-400 text-sm font-bold mb-2">Price per Night</label>
      <input
        type="text"
        id="price"
        name="price"
        value="<%= editing ? home.price : '' %>"
        placeholder="e.g., 999"
        class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <label for="location" class="block text-gray-400 text-sm font-bold mb-2">Location</label>
      <input
        type="text"
        id="location"
        name="location"
        value="<%= editing ? home.location : '' %>"
        placeholder="e.g., Paris, France"
        class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <label for="rating" class="block text-gray-400 text-sm font-bold mb-2">Rating</label>
      <input
        type="text"
        id="rating"
        name="rating"
        value="<%= editing ? home.rating : '' %>"
        placeholder="e.g., 4.5"
        class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <label for="photo" class="block text-gray-400 text-sm font-bold mb-2">House Photo</label>
      <input
        type="file"
        id="photo"
        name="photo"
        accept="image/jpg, image/jpeg, image/png"
        class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <label for="rules" class="block text-gray-400 text-sm font-bold mb-2">House Rules (PDF)</label>
      <input
        type="file"
        id="rules"
        name="rules"
        accept=".pdf"
        class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <input
        type="submit"
        value="<%= editing ? 'Update home' : 'Submit home' %>"
        class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300"
      />
    </form>
  </main>
</body>
</html>