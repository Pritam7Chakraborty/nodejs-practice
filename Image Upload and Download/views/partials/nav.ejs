<header class="bg-gradient-to-br from-gray-800 to-gray-700 text-white p-4 shadow-lg border-b border-gray-600 relative overflow-hidden">
  <nav class="container mx-auto">
    <div class="flex items-center justify-between w-full">
      <ul class="flex items-center gap-2 lg:gap-3">
        <li class="flex-shrink-0">
          <a href="/" class="<%= currentPage === 'index' ? 'bg-gray-700 shadow-inner ring-2 ring-gray-600' : 'hover:bg-gray-700' %> py-2 lg:py-2.5 px-3 lg:px-4 rounded-lg text-xs lg:text-sm whitespace-nowrap transition-all duration-300 flex items-center gap-1 lg:gap-2 font-medium hover:shadow-lg hover:-translate-y-0.5 border border-transparent hover:border-gray-600 group">
            <svg class="w-3 h-3 lg:w-4 lg:h-4 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9,22 9,12 15,12 15,22"/>
            </svg>
            <span class="relative">
              Airbnb
              <span class="absolute left-0 bottom-0 w-full h-0.5 bg-white transition-transform duration-300 scale-x-0 group-hover:scale-x-100 origin-left"></span>
            </span>
          </a>
        </li>
        <% if (isLoggedIn) {%>
          <% if (user && user.userType === 'Guest') {%>
          <li class="flex-shrink-0">
            <a href="/homes" class="<%= currentPage === 'Home' ? 'bg-gray-700 shadow-inner ring-2 ring-gray-600' : 'hover:bg-gray-700' %> py-2.5 px-4 rounded-lg text-sm whitespace-nowrap transition-all duration-300 flex items-center gap-2 font-medium hover:shadow-lg hover:-translate-y-0.5 border border-transparent hover:border-gray-600 group">
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:rotate-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <span class="relative">
                Homes
                <span class="absolute left-0 bottom-0 w-full h-0.5 bg-white transition-transform duration-300 scale-x-0 group-hover:scale-x-100 origin-left"></span>
              </span>
            </a>
          </li>
          <li class="flex-shrink-0">
            <a href="/favourites" class="<%= currentPage === 'favourites' ? 'bg-gray-700 shadow-inner ring-2 ring-gray-600' : 'hover:bg-gray-700' %> py-2.5 px-4 rounded-lg text-sm whitespace-nowrap transition-all duration-300 flex items-center gap-2 font-medium hover:shadow-lg hover:-translate-y-0.5 border border-transparent hover:border-gray-600 group">
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:scale-125" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
              <span class="relative">
                Favourites
                <span class="absolute left-0 bottom-0 w-full h-0.5 bg-white transition-transform duration-300 scale-x-0 group-hover:scale-x-100 origin-left"></span>
              </span>
            </a>
          </li>
          <li class="flex-shrink-0">
            <a href="/bookings" class="<%= currentPage === 'bookings' ? 'bg-gray-700 shadow-inner ring-2 ring-gray-600' : 'hover:bg-gray-700' %> py-2.5 px-4 rounded-lg text-sm whitespace-nowrap transition-all duration-300 flex items-center gap-2 font-medium hover:shadow-lg hover:-translate-y-0.5 border border-transparent hover:border-gray-600 group">
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span class="relative">
                Bookings
                <span class="absolute left-0 bottom-0 w-full h-0.5 bg-white transition-transform duration-300 scale-x-0 group-hover:scale-x-100 origin-left"></span>
              </span>
            </a>
          </li>
          <% } else {%>
          <li class="flex-shrink-0">
            <a href="/host/host-home-list" class="<%= currentPage === 'host-homes' ? 'bg-gray-700 shadow-inner ring-2 ring-gray-600' : 'hover:bg-gray-700' %> py-2.5 px-4 rounded-lg text-sm whitespace-nowrap transition-all duration-300 flex items-center gap-2 font-medium hover:shadow-lg hover:-translate-y-0.5 border border-transparent hover:border-gray-600 group">
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1"/>
              </svg>
              <span class="relative">
                Host homes
                <span class="absolute left-0 bottom-0 w-full h-0.5 bg-white transition-transform duration-300 scale-x-0 group-hover:scale-x-100 origin-left"></span>
              </span>
            </a>
          </li>
          <li class="flex-shrink-0">
            <a href="/host/add-home" class="<%= currentPage === 'addHome' ? 'bg-gray-700 shadow-inner ring-2 ring-gray-600' : 'hover:bg-gray-700' %> py-2.5 px-4 rounded-lg text-sm whitespace-nowrap transition-all duration-300 flex items-center gap-2 font-medium hover:shadow-lg hover:-translate-y-0.5 border border-transparent hover:border-gray-600 group">
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              <span class="relative">
                Add Home
                <span class="absolute left-0 bottom-0 w-full h-0.5 bg-white transition-transform duration-300 scale-x-0 group-hover:scale-x-100 origin-left"></span>
              </span>
            </a>
          </li>
          <% } %>
        <% } %>
      </ul>
      <div>
        <% if (!isLoggedIn) { %>
        <a href="/login" class="hover:bg-gray-700 py-2 lg:py-2.5 px-3 lg:px-4 rounded-lg text-xs lg:text-sm whitespace-nowrap transition-all duration-300 flex items-center gap-1 lg:gap-2 font-medium hover:shadow-lg hover:-translate-y-0.5 border border-transparent hover:border-gray-600 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 group">
          <svg class="w-3 h-3 lg:w-4 lg:h-4 transition-transform duration-300 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
          </svg>
          Login
        </a>
        <% } else { %>
        <form action="/logout" method="POST">
          <button type="submit" class="hover:bg-red-700 py-2 lg:py-2.5 px-3 lg:px-4 rounded-lg text-xs lg:text-sm whitespace-nowrap transition-all duration-300 flex items-center gap-1 lg:gap-2 font-medium hover:shadow-lg hover:-translate-y-0.5 border border-transparent hover:border-red-600 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 group">
            <svg class="w-3 h-3 lg:w-4 lg:h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            Logout
          </button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>