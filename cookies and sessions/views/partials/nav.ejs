<header class="bg-gray-800 text-white p-4 shadow-md">      
    <nav class="container mx-auto">           
        <div class="flex justify-center items-center w-full relative">
            
            <!-- Center navigation items -->
            <ul class="flex flex-wrap justify-center gap-2">                            
                <li class="flex-shrink">                    
                    <a href="/" class="<%= currentPage === 'index' ? 'bg-gray-700' : 'hover:bg-gray-700' %> py-2 px-4 rounded text-sm whitespace-nowrap transition duration-300">
                        Airbnb
                    </a>
                </li>             
                <% if (isLoggedIn) {%>          
                    <li class="flex-shrink">                    
                        <a href="/homes" class="<%= currentPage === 'Home' ? 'bg-gray-700' : 'hover:bg-gray-700' %> py-2 px-4 rounded text-sm whitespace-nowrap transition duration-300">
                            Homes-list
                        </a>
                    </li>                
                    <li class="flex-shrink">                    
                        <a href="/host/host-home-list" class="<%= currentPage === 'host-homes' ? 'bg-gray-700' : 'hover:bg-gray-700' %> py-2 px-4 rounded text-sm whitespace-nowrap transition duration-300">
                            Host homes
                        </a>
                    </li>                
                    <li class="flex-shrink">                    
                        <a href="/host/add-home" class="<%= currentPage === 'addHome' ? 'bg-gray-700' : 'hover:bg-gray-700' %> py-2 px-4 rounded text-sm whitespace-nowrap transition duration-300">
                            Add Home
                        </a>
                    </li>                
                    <li class="flex-shrink">                    
                        <a href="/favourites" class="<%= currentPage === 'favourites' ? 'bg-gray-700' : 'hover:bg-gray-700' %> py-2 px-4 rounded text-sm whitespace-nowrap transition duration-300">
                            Favourites
                        </a>
                    </li>                
                    <li class="flex-shrink">                    
                        <a href="/bookings" class="<%= currentPage === 'bookings' ? 'bg-gray-700' : 'hover:bg-gray-700' %> py-2 px-4 rounded text-sm whitespace-nowrap transition duration-300">
                            Bookings
                        </a>
                    </li>         
                <% } %>          
            </ul>
            
            <!-- Login positioned absolutely to the right -->
            <div class="absolute right-0">     
              <% if (!isLoggedIn) { %>               
                <a href="/login" class="hover:bg-gray-700 py-2 px-4 rounded text-sm whitespace-nowrap transition duration-300">
                    Login
                </a>
              <% } else { %>
                <form action="/logout" method="POST" >
                    <button type="submit" class="hover:bg-gray-700 py-2 px-4 rounded text-sm whitespace-nowrap transition duration-300">
                        Logout
                    </button>
                </form>
              <% } %>
            </div>
        </div>      
    </nav>  
</header>