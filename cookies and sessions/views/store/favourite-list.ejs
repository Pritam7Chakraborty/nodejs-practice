<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-900 text-gray-100">
    <%- include('../partials/nav') %>

      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <h2 class="text-4xl text-red-400 font-bold text-center mb-10">
          Here are your favourite homes:
        </h2>

        <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
          <% favouriteHomes.forEach(home=> { %>
            <div
              class="bg-gray-800 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition duration-300 flex flex-col">

              <!-- Image -->
              <div class="h-64 overflow-hidden">
                <img src="<%= home.photo %>" alt="House Image"
                  class="w-full h-full object-cover transform hover:scale-105 transition duration-500" />
              </div>

              <!-- Content -->
              <div class="p-6 flex flex-col flex-grow justify-between">
                <div class="mb-4">
                  <h3 class="text-2xl font-semibold text-gray-100 mb-1">
                    <%= home.houseName %>
                  </h3>
                  <p class="text-sm text-gray-400 mb-2">
                    üìç <%= home.location %>
                  </p>
                  <p class="text-sm text-gray-300 mb-2">
                    üí∞ <strong>Price:</strong> ‚Çπ<%= home.price %> / night
                  </p>
                  <div class="flex items-center text-sm text-yellow-400">
                    ‚≠ê <span class="ml-1 text-gray-200">
                      <%= home.rating ? home.rating : 'N/A' %>/5
                    </span>
                  </div>
                  <div class="text-center mb-2 mt-2">
                    <form action="/favourites/delete/<%= home._id%>" method="post">
                      <button type="submit"
                        class="w-25 bg-red-500 text-white p-2 text-sm rounded-lg hover:bg-red-700 transition duration-300">
                        Remove from Favourites
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </main>
  </body>

  </html>