<%- include('../partials/head') %>
    </head>

    <body class="bg-gray-900 text-gray-100">
        <%- include('../partials/nav') %>

            <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
                <div class="max-w-md w-full space-y-8">
                    <!-- Logo/Icon placeholder -->
                    <div class="text-center">
                        <h1 class="text-3xl font-bold text-gray-100">Login with your info!</h1>
                    </div>

                    <!-- Login Form -->
                    <div class="bg-gray-800 rounded-lg shadow-md p-8">
                        <form action="/login" method="POST" class="space-y-6">
                            <%- include('../partials/errors') %>

                                <div>
                                    <label for="username" class="block text-sm font-medium text-gray-100 mb-2">
                                        Email
                                    </label>
                                    <input type="email" id="username" name="email"
                                        value="<%= oldInput.email ? oldInput.email : '' %>" required
                                        class="w-full px-4 py-2 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                                        placeholder="Enter your email" />
                                </div>

                                <div>
                                    <label for="password" class="block text-sm font-medium text-gray-100 mb-2">
                                        Password
                                    </label>
                                    <input type="password" id="password" name="password" required
                                        class="w-full px-4 py-2 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                                        placeholder="Enter your password" />
                                </div>

                                <button type="submit"
                                    class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300 font-medium">
                                    Sign in
                                </button>
                        </form>

                        <!-- Divider -->
                        <div class="mt-6">
                            <div class="relative">
                                <div class="absolute inset-0 flex items-center">
                                    <div class="w-full border-t border-gray-700"></div>
                                </div>

                            </div>
                        </div>


                        <!-- Sign up link -->
                        <div class="text-center py-4 gap-2">
                            <span class="text-gray-400">Not a user? </span>
                            <a href="/signup" class="text-red-400 hover:text-red-300 font-medium">
                                Sign up now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
    </body>

    </html>