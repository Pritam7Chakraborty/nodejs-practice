<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-900 text-gray-100">
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-8 p-8 bg-gray-800 rounded-lg shadow-md">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-100">
          <%= editing ? "Edit" : "Register" %> Your Home on AirBnB
        </h1>
        <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" class="max-w-md mx-auto">
          <input type="hidden" name="id" value="<%=editing ? home.id : '' %>" />

          <input type="text" name="houseName" value="<%=editing ? home.houseName : ''%> "
            placeholder="Enter your House Name"
            class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
          <input type="text" name="price" value="<%= editing ? home.price : ''%> " placeholder="Price per Night"
            class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
          <input type="text" name="location" value="<%=editing ? home.location : ''%> "
            placeholder="Location of your house"
            class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
          <input type="text" name="rating" value="<%= editing ? home.rating : ''%> " placeholder="Rating (1-5)"
            class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
          <input type="text" name="photo" value="<%= editing ? home.photo : ''%> " placeholder="Image of your house"
            class="w-full px-4 py-2 mb-4 border border-gray-700 bg-gray-900 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
          <input type="submit" value="<%= editing ? 'Update home' : 'Submit home' %> "
          class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300"
          />
        </form>
      </main>
  </body>

  </html>